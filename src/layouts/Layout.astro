---
import Footer from '../components/Footer.astro'
import NavBar from '../components/NavBar.astro'
import '../assets/style/fonts.css'
import '../assets/style/elements.scss'
import '../assets/style/layout.scss'

const description = "Diplômée de l'école de Psychologues Praticiens de Paris, je vous reçois dans mon cabinet à Saint-Jory pour des prises en charge d'adultes."
const siteUrl = 'https://amelie.coppeauxpsychologue.fr'


export interface Props {
  title?: string
}
const { title = 'Amélie Coppeaux - Psychologue clinicienne à Toulouse' } = Astro.props
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />

    <title>
      {title ?? 'Amélie Coppeaux Psychologue clinicienne à Saint-Jory'}
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="format-detection" content="telephone=yes" />

    <!-- SEO -->
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${siteUrl}/og-image.png`} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:locale" content="fr_FR" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" sizes="48x48" />
  </head>
  <body>
    <main id="main">
      <NavBar />
      <slot />
      <Footer />
    </main>
  </body>
</html>

<script>
  document.getElementById('main')?.addEventListener('click', () => {
    document.querySelector('nav > ul')?.classList.remove('visible')
  })
</script>

<style lang="scss">
  @use '../assets/style/variables.scss' as *;

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html,
  body {
    min-height: 100vh;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-size: 1.2rem;
    font-family: $main-font;
    background-color: $light-color;
    color: $primary-color-dark;
  }

  main {
    min-height: 100vh;
    padding-top: $navbar-height;
    display: flex;
    flex-direction: column;
  }
</style>
